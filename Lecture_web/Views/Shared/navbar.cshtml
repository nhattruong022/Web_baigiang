@using System.Security.Claims
@{
var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
}
<nav class="sidebar">
  <div class="logo">
    <img src="~/images/logo.png" alt="Logo" class="logo-img">
    <h1>E-Learning</h1>
  </div>

  <ul class="nav-links">
    @if (userRole == "Admin")
    {
    <li><a href="@Url.Action("Index", "Dashboard" , new { area="Admin" })"><i class="fas fa-tachometer-alt"></i><span>Tổng quan</span></a></li>
    <li><a href="@Url.Action("Index", "QuanLyNguoiDung" , new { area="Admin" })"><i class="fas fa-user-cog"></i><span>Quản lý tài khoản người dùng</span></a></li>
    <li><a href="@Url.Action("Index", "QuanLyHocPhan" , new { area="Admin" })"><i class="fas fa-book-open"></i><span>Quản lý học phần</span></a></li>
    <li><a href="@Url.Action("Index", "QuanLyKhoa" , new { area="Admin" })"><i class="fas fa-university"></i><span>Quản lý khoa</span></a></li>
    <li><a href="@Url.Action("Index", "QuanLyBoMon" , new { area="Admin" })"><i class="fas fa-sitemap"></i><span>Quản lý bộ môn</span></a></li>
    }
    else if (userRole == "Giangvien" || userRole == "Sinhvien")
    {
    <li>
      <a href="/User/LopHoc/Index">
        <i class="fas fa-home"></i>
        <span>Trang chủ</span>
      </a>
    </li>
    <!-- Menu Khoa đa cấp -->
    <li class="menu-khoa">
      <a href="#" onclick="toggleSubMenu(event, this)">
        <i class="fas fa-university"></i>
        <span>Khoa</span>
        <i class="fas fa-chevron-down submenu-arrow"></i>
      </a>
      <ul class="submenu">
        <!-- Cấp 2: Khoa công nghệ thông tin -->
        <li class="menu-khoa-cntt">
          <a href="#" onclick="toggleSubMenu(event, this)">
            <i class="fas fa-university"></i>
            <span>Khoa công nghệ thông tin</span>
            <i class="fas fa-chevron-down submenu-arrow"></i>
          </a>
          <ul class="submenu">
            <!-- Cấp 3: Bộ môn -->
            <li class="menu-bomon">
              <a href="#" onclick="toggleSubMenu(event, this)">
                <i class="fas fa-code"></i>
                <span>Bộ môn Lập trình</span>
                <i class="fas fa-chevron-down submenu-arrow"></i>
              </a>
              <ul class="submenu">
                <li>
                  <a href="#" onclick="showLopHocPhan('LTWEB01')">
                    <i class="fas fa-book"></i>
                    <span>Học phần: Lập trình Web</span>
                  </a>
                </li>
                <li>
                  <a href="#" onclick="showLopHocPhan('LTJAVA01')">
                    <i class="fas fa-book"></i>
                    <span>Học phần: Lập trình Java</span>
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </li>
        <!-- Cấp 2: Khoa Quản trị kinh doanh -->
        <li class="menu-khoa-qtkd">
          <a href="#" onclick="toggleSubMenu(event, this)">
            <i class="fas fa-university"></i>
            <span>Khoa Quản trị kinh doanh</span>
            <i class="fas fa-chevron-down submenu-arrow"></i>
          </a>
          <ul class="submenu">
            <li class="menu-bomon">
              <a href="#" onclick="toggleSubMenu(event, this)">
                <i class="fas fa-briefcase"></i>
                <span>Quản trị Marketing</span>
                <i class="fas fa-chevron-down submenu-arrow"></i>
              </a>
              <ul class="submenu">
                <li>
                  <a href="#" onclick="selectHocPhan('MKT101')">
                    <i class="fas fa-book"></i>
                    <span>Học phần: Marketing căn bản</span>
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </li>
        <!-- Cấp 2: Khoa Mạng máy tính -->
        <li class="menu-khoa-mmt">
          <a href="#" onclick="toggleSubMenu(event, this)">
            <i class="fas fa-university"></i>
            <span>Khoa mạng máy tính</span>
            <i class="fas fa-chevron-down submenu-arrow"></i>
          </a>
          <ul class="submenu">
            <li class="menu-bomon">
              <a href="#" onclick="toggleSubMenu(event, this)">
                <i class="fas fa-briefcase"></i>
                <span>Quản lý mạng</span>
                <i class="fas fa-chevron-down submenu-arrow"></i>
              </a>
              <ul class="submenu">
                <li>
                  <a href="#" onclick="selectHocPhan('MKT101')">
                    <i class="fas fa-book"></i>
                    <span>Học phần: cài win</span>
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </li>
      </ul>
    </li>
    }
    @if (userRole == "Giangvien")
    {
    <li><a href="/User/QuanLyBaiGiang/Index"><i class="fas fa-book"></i><span>Quản lý bài giảng</span></a></li>
    <li><a href="/User/QuanLyChuong/Index"><i class="fas fa-book"></i><span>Quản lý chương</span></a></li>
    <li><a href="/User/QuanLyBai/Index"><i class="fas fa-book"></i><span>Quản lý bài</span></a></li>
    }
  </ul>
</nav>