      if (isCurrentTabNotices()) {
        loadNotifications(currentLopHocPhanId);
      } else {
        hasUnloadedNotifications = true;
      }
    });
    notificationConnection.on("DeleteNotification", function(notificationId) {
      // Xử lý khi có thông báo bị xóa từ client khác
      console.log('Notification deleted by another user:', notificationId);
      if (isCurrentTabNotices()) {
