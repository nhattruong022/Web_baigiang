          if (data.success) {
            let html = `<div style='background:#e6fff0;padding:12px;border-radius:6px;margin-bottom:10px;'>Tìm thấy <b>${data.valid.length}</b> sinh viên hợp lệ, <b>${data.invalid.length}</b> dòng lỗi.</div>`;
            if (data.valid.length > 0) {
              html += `<div style='max-height:180px;overflow:auto;'><table style='width:100%;border-collapse:collapse;'><thead><tr><th>Email</th><th>Tên đăng nhập</th><th>Họ tên</th></tr></thead><tbody>${data.valid.map(s=>`<tr><td>${s.email}</td><td>${s.tenDangNhap}</td><td>${s.hoTen}</td></tr>`).join('')}</tbody></table></div>`;
              html += `<button class='btn-primary' style='margin-top:10px;' onclick='window.confirmInviteStudentExcel()'>Xác nhận mời ${data.valid.length} sinh viên</button>`;
            }
            if (data.invalid.length > 0) {
              html += `<div style='background:#ffeaea;padding:10px;border-radius:6px;margin-top:10px;'><b>Lỗi:</b><ul>${data.invalid.map(e=>`<li>${e}</li>`).join('')}</ul></div>`;
            }
            previewSection.innerHTML = html;
            previewSection.style.display = 'block';
            resultSection.innerHTML = '';
          } else {
            previewSection.innerHTML = `<div style='background:#ffeaea;padding:10px;border-radius:6px;'>${data.message || 'Lỗi không xác định'}</div>`;
            previewSection.style.display = 'block';
            resultSection.innerHTML = '';
          }
        })
        .catch(err => {
          previewSection.innerHTML = `<div style='background:#ffeaea;padding:10px;border-radius:6px;'>Lỗi khi đọc file Excel: ${err.message}</div>`;
          previewSection.style.display = 'block';
          resultSection.innerHTML = '';
        });
    }

    // Để gọi từ HTML động
    window.confirmInviteStudentExcel = function() {
      if (!selectedFile) {
        alert('Vui lòng chọn file Excel');
        return;
      }
      const formData = new FormData();
      formData.append('excelFile', selectedFile);
      formData.append('idLopHocPhan', currentLopHocPhanId);
      resultSection.innerHTML = `<div style='padding:12px; color:#666;'><i class='fas fa-spinner fa-spin'></i> Đang gửi lời mời...</div>`;
      fetch('/User/ChiTietHocPhan/ConfirmInviteExcel', {
          method: 'POST',
          body: formData
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            resultSection.innerHTML = `<div style='background:#e6fff0;padding:12px;border-radius:6px;'>${data.message}</div>`;
            setTimeout(() => {
              closeInviteStudentModal();
              refreshStudentsList();
            }, 2000);
          } else {
            resultSection.innerHTML = `<div style='background:#ffeaea;padding:10px;border-radius:6px;'>${data.message || 'Lỗi không xác định'}</div>`;
          }
        })
        .catch(err => {
          resultSection.innerHTML = `<div style='background:#ffeaea;padding:10px;border-radius:6px;'>Lỗi khi gửi lời mời: ${err.message}</div>`;
        });
    };
  })();
</script>

