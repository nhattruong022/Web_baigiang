  @{
  ViewData["Title"] = "Quản lý chương";
  Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
  }


  <div class="assignment-management-container">
    <div class="assignment-header">
      <h2>Quản lý chương</h2>
      <div class="assignment-actions">
        <select id="lectureFilter" style="padding: 0.5rem 1rem; border-radius: 5px; border: 1px solid #ddd;">
          <option value="">-- Lọc theo bài giảng --</option>
          <option value="lecture1">Lập trình web</option>
          <option value="lecture2">Cơ sở dữ liệu</option>
          <!-- Thêm các bài giảng khác -->
        </select>
        <input type="text" id="searchAssignmentInput" placeholder="Tìm kiếm chương..." style="padding: 0.5rem 1rem; border-radius: 5px; border: 1px solid #ddd;">

        <button class="btn-primary" onclick="openAddAssignmentModal()">
          <i class="fas fa-plus"></i> Thêm chương
        </button>

      </div>
    </div>
    <div class="assignment-list">
      <table class="assignment-table" id="assignmentTable">
        <thead>
          <tr>
            <th>Tên chương</th>
            <th>Mô tả</th>
            <th>bài giảng</th>
            <th>Lớp học phần</th>
            <th>Ngày tạo</th>
            <th>Ngày cập nhật</th>
            <th>Thao tác</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Chương 1: Giới thiệu HTML</td>
            <td>Giới thiệu về HTML và cấu trúc cơ bản của một trang web.</td>
            <td>Lập trình Web cơ bản</td>
            <td>INT1234.1</td>
            <td>01/03/2024</td>
            <td>02/03/2024</td>
            <td class="assignment-actions-btns">
              <button class="btn-secondary" title="Chỉnh sửa"><i class="fas fa-edit"></i></button>
              <button class="btn-danger" title="Xóa"><i class="fas fa-trash"></i></button>
              <button class="btn-primary" title="Gán cho lớp"><i class="fas fa-link"></i></button>
            </td>
          </tr>
          <tr>
            <td>Chương 2: CSS cơ bản</td>
            <td>Học về cách sử dụng CSS để tạo kiểu cho trang web.</td>
            <td>Lập trình Web cơ bản</td>
            <td>INT1234.1</td>
            <td>05/03/2024</td>
            <td>06/03/2024</td>
            <td class="assignment-actions-btns">
              <button class="btn-secondary" title="Chỉnh sửa"><i class="fas fa-edit"></i></button>
              <button class="btn-danger" title="Xóa"><i class="fas fa-trash"></i></button>
              <button class="btn-primary" title="Gán cho lớp"><i class="fas fa-link"></i></button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  </main>
  </div>
  <!-- Modal thêm mới chương (demo) -->
  <div class="modal" id="addAssignmentModal">
    <div class="modal-content chapter-modal-content">
      <div class="modal-header chapter-modal-header">
        <i class="fas fa-layer-group"></i>
        <h2>Thêm chương mới</h2>
        <button class="close-modal" onclick="closeAddAssignmentModal()">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <form class="modal-form chapter-modal-form" onsubmit="event.preventDefault(); closeAddAssignmentModal();">
        <div class="form-group">
          <label>Tên chương <span class="required">*</span></label>
          <input type="text" required placeholder="Nhập tên chương">
        </div>
        <div class="form-group">
          <label>Mô tả</label>
          <textarea rows="3" placeholder="Nhập mô tả chương"></textarea>
        </div>
        <div class="form-group">
          <label>Bài giảng <span class="required">*</span></label>
          <select id="editChapterCourse" class="styled-select" required>
            <option value="">-- Chọn bài giảng --</option>
            <option value="lecture1">Lập trình web</option>
            <option value="lecture2">Cơ sở dữ liệu</option>
          </select>
        </div>
        <div class="form-group">
          <label>Lớp học phần <span class="required">*</span></label>
          <select id="editChapterClass" class="styled-select-multi" multiple required>
            <option value="INT1234.1">INT1234.1</option>
            <option value="INT1235.1">INT1235.1</option>
          </select>
        </div>
        <div class="form-actions">
          <button type="button" class="btn-secondary" onclick="closeAddAssignmentModal()">Hủy</button>
          <button type="submit" class="btn-primary">Thêm mới <i class="fas fa-plus"></i></button>
        </div>
      </form>
    </div>
  </div>
  <!-- Modal chỉnh sửa chương -->
  <div class="modal" id="editAssignmentModal">
    <div class="modal-content chapter-modal-content">
      <div class="modal-header chapter-modal-header">
        <i class="fas fa-layer-group"></i>
        <h2>Chỉnh sửa chương</h2>
        <button class="close-modal" onclick="closeEditAssignmentModal()">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <form class="modal-form chapter-modal-form" id="editAssignmentForm" onsubmit="event.preventDefault(); saveEditAssignment();">
        <div class="form-group">
          <label>Tên chương <span class="required">*</span></label>
          <input type="text" id="editChapterName" required placeholder="Nhập tên chương">
        </div>
        <div class="form-group">
          <label>Mô tả</label>
          <textarea rows="3" id="editChapterDesc" placeholder="Nhập mô tả chương"></textarea>
        </div>
        <div class="form-group">
          <label>Bài giảng <span class="required">*</span></label>
          <select id="editChapterCourse" class="styled-select" required>
            <option value="">-- Chọn bài giảng --</option>
            <option value="lecture1">Lập trình web</option>
            <option value="lecture2">Cơ sở dữ liệu</option>
          </select>
        </div>
        <div class="form-group">
          <label>Lớp học phần <span class="required">*</span></label>
          <select id="editChapterClass" class="styled-select-multi" multiple required>
            <option value="INT1234.1">INT1234.1</option>
            <option value="INT1235.1">INT1235.1</option>
          </select>
        </div>
        <div class="form-actions">
          <button type="button" class="btn-secondary" onclick="closeEditAssignmentModal()">Hủy</button>
          <button type="submit" class="btn-primary">Lưu <i class="fas fa-save"></i></button>
        </div>
      </form>
    </div>
  </div>
  <!-- Modal xác nhận xóa chương -->
  <div class="modal" id="confirmDeleteChapterModal">
    <div class="modal-content" id="confirmDeleteModalContent">
      <div class="modal-header" style="justify-content:center;">
        <h2 style="font-size:1.1rem; margin:0 auto;">Xác nhận xóa</h2>
      </div>
      <div class="modal-form" style="padding:20px;">
        <p>Bạn có chắc chắn muốn xóa chương này?</p>
        <div class="modal-actions">
          <button class="btn-secondary" onclick="closeConfirmDeleteChapter()">Hủy</button>
          <button class="btn-danger" onclick="confirmDeleteChapter()">Xóa</button>
        </div>
      </div>
    </div>
  </div>