@{
Layout = null;
}
<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý người dùng - Hệ Thống Quản Lý Bài Giảng</title>
  <link rel="stylesheet" href="~/css/style.css">
  <link rel="stylesheet" href="~/css/admin-dashboard.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background: #f5f6fa;
      font-family: 'Roboto', sans-serif;
    }

    .container {
      max-width: 1400px;
      margin: 40px auto;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
      padding: 32px;
    }

    .tabs {
      display: flex;
      gap: 16px;
      margin-bottom: 24px;
    }

    .tab-btn {
      border: none;
      background: #f5f6fa;
      color: #333;
      padding: 10px 28px;
      border-radius: 6px 6px 0 0;
      font-size: 16px;
      cursor: pointer;
    }

    .tab-btn.active {
      background: #3498db;
      color: #fff;
    }

    .actions {
      display: flex;
      gap: 8px;
    }

    .btn {
      border: none;
      border-radius: 4px;
      padding: 7px 16px;
      font-size: 14px;
      cursor: pointer;
    }

    .btn-primary {
      background: #3498db;
      color: #fff;
    }

    .btn-primary:disabled {
      background: #b0c4de;
      cursor: not-allowed;
    }

    .btn-edit {
      background: #fbbc05;
      color: #fff;
    }

    .btn-delete {
      background: #ea4335;
      color: #fff;
    }

    .btn-delete[disabled] {
      background: #eee;
      color: #aaa;
      cursor: not-allowed;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 16px;
    }

    th,
    td {
      padding: 12px 10px;
      border-bottom: 1px solid #eee;
      text-align: left;
    }

    th {
      background: #f8f9fa;
    }

    tr:last-child td {
      border-bottom: none;
    }

    .tooltip {
      position: relative;
    }

    .tooltip[disabled]:hover::after {
      content: attr(data-tooltip);
      position: absolute;
      left: 50%;
      top: 120%;
      transform: translateX(-50%);
      background: #222;
      color: #fff;
      font-size: 12px;
      padding: 5px 10px;
      border-radius: 4px;
      white-space: nowrap;
      z-index: 10;
    }

    .quick-actions {
      margin-bottom: 20px;
      display: flex;
      gap: 12px;
    }

    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(0, 0, 0, 0.2);
      align-items: center;
      justify-content: center;
      z-index: 1000;
    }

    .modal.active {
      display: flex;
    }

    .modal-content {
      background: #fff;
      border-radius: 8px;
      padding: 32px 24px;
      min-width: 320px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 18px;
    }

    .modal-header h2 {
      font-size: 20px;
    }

    .close-modal {
      background: none;
      border: none;
      font-size: 20px;
      cursor: pointer;
    }

    .modal-form .form-group {
      margin-bottom: 16px;
    }

    .modal-form label {
      display: block;
      margin-bottom: 6px;
      color: #333;
    }

    .modal-form input {
      width: 100%;
      padding: 8px 10px;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    .modal-form .form-actions {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
    }

    /* Modal chi tiết đẹp hơn */
    #modal-detail .modal-content {
      min-width: 420px;
      max-width: 520px;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(52, 152, 219, 0.18), 0 1.5px 8px rgba(0, 0, 0, 0.08);
      padding: 36px 32px 28px 32px;
      font-size: 17px;
      position: relative;
      animation: fadeInModal 0.25s;
    }

    #modal-detail .modal-header {
      border-bottom: 1px solid #e0e6ed;
      margin-bottom: 18px;
      padding-bottom: 10px;
    }

    #modal-detail h2#detail-title {
      font-size: 22px;
      color: #3498db;
      font-weight: 700;
      margin: 0;
    }

    #modal-detail .close-modal {
      font-size: 26px;
      color: #aaa;
      transition: color 0.2s;
    }

    #modal-detail .close-modal:hover {
      color: #ea4335;
    }

    #detail-body p {
      margin: 10px 0 0 0;
      color: #222;
      font-size: 17px;
    }

    #detail-body h3 {
      margin: 18px 0 10px 0;
      font-size: 18px;
      color: #3498db;
      font-weight: 500;
    }

    #detail-body .comment-list {
      margin-top: 0;
      padding: 0;
    }

    #detail-body .comment-item {
      background: #f8f9fa;
      border: 1px solid #e0e6ed;
      border-radius: 8px;
      padding: 10px 14px;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 16px;
      color: #333;
    }

    #detail-body .comment-item:before {
      content: '\f075';
      font-family: 'Font Awesome 6 Free';
      font-weight: 900;
      color: #3498db;
      margin-right: 8px;
      font-size: 15px;
    }

    .btn-icon {
      width: 44px;
      height: 44px;
      border-radius: 10px;
      border: none;
      background: #f8f9fa;
      color: #7f8c8d;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      cursor: pointer;
      transition: background 0.2s, color 0.2s;
      margin: 0 2px;
    }

    .btn-icon:hover:not(:disabled) {
      background: #e0e0e0;
      color: #2c3e50;
    

    s .btn-icon:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  </style>
</head>

<body>
  <div class="app-container">
    @await Html.PartialAsync("Sidebar")
    <!-- Main Content Area -->
    <main class="main-content">
      <!-- Top Navigation Bar -->
      @await Html.PartialAsync("Topbar")
      <!-- User Management Content -->
      <div class="container">
        <div class="quick-actions" style="display:flex; justify-content:space-between; align-items:center; gap:12px;">
          <button class="btn btn-primary" onclick="openModal('subject')">+ Thêm học phần mới</button>
        </div>
        <div class="tabs-search-row" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
          <div class="tabs">
            <button class="tab-btn active" onclick="showTab('subjects')">Học phần</button>
          </div>
          <div class="search-bar" style="width:260px;">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Tìm kiếm học phần...">
          </div>
        </div>
        <!-- Học phần -->
        <div class="tab-content" id="subjects" style="display:block;">
          <table>
            <thead>
              <tr>
                <th>Mã học phần</th>
                <th>Tên học phần</th>
                <th>Số tín chỉ</th>
                <th>Bộ môn</th>
                <th>Số lớp</th>
                <th>Thao tác</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>INT1234</td>
                <td>Lập trình Web</td>
                <td>3</td>
                <td>HTTT</td>
                <td>4</td>
                <td class="actions">
                  <button class="btn-icon" onclick="openModal('edit-subject')" title="Sửa">
                    <i class="fas fa-pen-to-square"></i>
                  </button>
                  <button class="btn-icon" disabled title="Xóa">
                    <i class="fas fa-trash"></i>
                  </button>
                  <button class="btn-icon" onclick="openDetailModal('subject', 'INT1234')" title="Chi tiết">
                    <i class="fas fa-eye"></i>
                  </button>
                </td>
              </tr>
              <tr>
                <td>INT1235</td>
                <td>Cơ sở dữ liệu</td>
                <td>3</td>
                <td>HTTT</td>
                <td>0</td>
                <td class="actions">
                  <button class="btn-icon" onclick="openModal('edit-subject')" title="Sửa">
                    <i class="fas fa-pen-to-square"></i>
                  </button>
                  <button class="btn-icon" title="Xóa">
                    <i class="fas fa-trash"></i>
                  </button>
                  <button class="btn-icon" onclick="openDetailModal('subject', 'INT1235')" title="Chi tiết">
                    <i class="fas fa-eye"></i>
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
  <!-- Modal Thêm/Sửa -->
  <div class="modal" id="modal-subject">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Thêm học phần</h2>
        <button class="close-modal" onclick="closeModal('subject')">&times;</button>
      </div>
      <form class="modal-form">
        <div class="form-group">
          <label>Mã học phần</label>
          <input type="text" required>
        </div>
        <div class="form-group">
          <label>Tên học phần</label>
          <input type="text" required>
        </div>
        <div class="form-group">
          <label>Số tín chỉ</label>
          <input type="text" required>
        </div>
        <div class="form-group">
          <label>Bộ môn</label>
          <input type="text" required>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-edit" onclick="closeModal('subject')">Hủy</button>
          <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
      </form>
    </div>
  </div>
  <!-- Modal Chi tiết học phần -->
  <div class="modal" id="modal-detail">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="detail-title">Chi tiết</h2>
        <button class="close-modal" onclick="closeModal('detail')">&times;</button>
      </div>
      <div id="detail-body">
        <!-- Nội dung chi tiết sẽ được render bằng JS -->
      </div>
    </div>
  </div>
  <!-- Popup chỉnh sửa học phần -->
  <div class="modal" id="modal-edit-subject">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Chỉnh sửa học phần</h2>
        <button class="close-modal" onclick="closeModal('edit-subject')">&times;</button>
      </div>
      <form class="modal-form">
        <div class="form-group">
          <label>Mã học phần</label>
          <input type="text" value="INT1234" required>
        </div>
        <div class="form-group">
          <label>Tên học phần</label>
          <input type="text" value="Lập trình Web" required>
        </div>
        <div class="form-group">
          <label>Số tín chỉ</label>
          <input type="text" value="3" required>
        </div>
        <div class="form-group">
          <label>Bộ môn</label>
          <input type="text" value="HTTT" required>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-edit" onclick="closeModal('edit-subject')">Hủy</button>
          <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
      </form>
    </div>
  </div>
</body>
<script>
  function toggleUserMenu() {
    document.querySelector('.user-dropdown').classList.toggle('active');
  }
  // Close dropdown when clicking outside
  document.addEventListener('click', function(event) {
    const userProfile = document.querySelector('.user-profile');
    const dropdown = document.querySelector('.user-dropdown');
    if (!userProfile.contains(event.target)) {
      dropdown.classList.remove('active');
    }
  });

  function logout() {
    if (confirm('Bạn có chắc chắn muốn đăng xuất?')) {
      window.location.href = '/Account/Login';
    }
  }

  function showTab(tab) {
    document.getElementById('subjects').style.display = tab === 'subjects' ? 'block' : 'none';
    document.querySelectorAll('.tab-btn').forEach((btn, i) => {
      btn.classList.toggle('active', (tab === 'subjects' && i === 0));
    });
  }

  function openModal(type) {
    document.getElementById('modal-' + type).classList.add('active');
  }

  function closeModal(type) {
    document.getElementById('modal-' + type).classList.remove('active');
  }

  function openDetailModal(type, id) {
    let html = '';
    if (type === 'subject' && id === 'INT1234') {
      document.getElementById('detail-title').innerText = 'Chi tiết học phần: Lập trình Web';
      html = `<p><b>Mã học phần:</b> INT1234</p>
                        <p><b>Tên học phần:</b> Lập trình Web</p>
                        <p><b>Số tín chỉ:</b> 3</p>
                        <p><b>Bộ môn:</b> HTTT</p>
                        <p><b>Số lớp:</b> 4</p>`;
    } else if (type === 'subject' && id === 'INT1235') {
      document.getElementById('detail-title').innerText = 'Chi tiết học phần: Cơ sở dữ liệu';
      html = `<p><b>Mã học phần:</b> INT1235</p>
                        <p><b>Tên học phần:</b> Cơ sở dữ liệu</p>
                        <p><b>Số tín chỉ:</b> 3</p>
                        <p><b>Bộ môn:</b> HTTT</p>
                        <p><b>Số lớp:</b> 0</p>`;
    }
    document.getElementById('detail-body').innerHTML = html;
    openModal('detail');
  }
  // Tự động mở popup nếu có ?open=add
  window.addEventListener('DOMContentLoaded', function() {
    const params = new URLSearchParams(window.location.search);
    if (params.get('open') === 'add') {
      openModal('subject');
    }
  });
  window.addEventListener('DOMContentLoaded', function() {
    const params = new URLSearchParams(window.location.search);
    if (params.get('open') === 'edit') {
      openModal('edit-subject');
    }
  });
</script>

</html>