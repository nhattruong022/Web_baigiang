@model List<Lecture_web.Models.TaiKhoanModels>
  <tbody id="user-table-body">
    @foreach (var user in Model)
    {
    <tr>
      <td><input type="checkbox" class="user-select"></td>
      <td>@user.TenDangNhap</td>
      <td>@user.HoTen</td>
      <td>@user.VaiTro</td>
      <td>@user.Email</td>
      <td>@user.SoDienThoai</td>
      <td>
        @if (!string.IsNullOrEmpty(user.AnhDaiDien))
        {
        <img src="@user.AnhDaiDien" alt="User" style="width:52px; height:52px; border-radius:50%;">
        }
      </td>
      <td><span class="status @((user.TrangThai != null && user.TrangThai.Trim() ==" HoatDong") ? "active" : "inactive" )">@user.TrangThai</span></td>
      <td>@(user.NgayTao.HasValue ? user.NgayTao.Value.ToString("dd/MM/yyyy") : "")</td>
      <td>
        <div class="actions">
          <button class="btn-icon" title="Chỉnh sửa" onclick="editUser(@user.IdTaiKhoan)">
            <i class="fas fa-edit"></i>
          </button>
          <button class="btn-icon status-toggle-btn" title="Cập nhật trạng thái" onclick="confirmUpdateStatusUser(@user.IdTaiKhoan, '@((user.TrangThai != null && user.TrangThai.Trim() == " HoatDong") ? "KhongHoatDong" : "HoatDong" )')">
            <i class="fas @((user.TrangThai != null && user.TrangThai.Trim() == " HoatDong") ? "fa-toggle-on status-on" : "fa-toggle-off status-off" )"></i>
          </button>
        </div>
      </td>
    </tr>
    }
  </tbody>